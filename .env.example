# WalletConnect Project ID (Required)
# Get from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Base URL for metadata and social sharing (Required for production)
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Alchemy API Key (Optional - for enhanced Web3 functionality)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_key_here

# Custom RPC URLs (Optional)
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-key
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/your-key
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arb-mainnet.alchemyapi.io/v2/your-key

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_SUPPORTED_CHAINS=1,137,42220,8453

# CoinAPI Key (Optional - for real price data)
NEXT_PUBLIC_COINAPI_KEY=your_coinapi_key_here

# Nitrolite Integration with ClearNode (Production-ready)
NITROLITE_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
NEXT_PUBLIC_WALLET_ADDRESS=0x...
NEXT_PUBLIC_CLEARNODE_URL=wss://clearnet.yellow.com/ws
NEXT_PUBLIC_ENABLE_CLEARNODE=true

# Development Mode
NODE_ENV=development
